{
    "name": "linuxforphp/linuxforcomposer",
    "description": "A Composer interface to run 'Linux for PHP' Docker containers, Dockerfiles or docker-compose files.",
    "single": {
        "image": {
            "linuxforcomposer": {
                "php-versions": ["7.1"],
                "script": ["lfphp --mysql --phpfpm --apache"],
                "thread-safe": "false"
            },
            "dockerfile": {
                "url": "Dockerfile",
                "container-name": "phpcl_core_php8",
                "username": "",
                "token": ""
            }
        },
        "containers": {
            "modes": {
                "mode1": "detached",
                "mode2": "interactive",
                "mode3": "tty"
            },
            "ports": {
                "port1": ["8888:80"]
            },
            "persist-data": {
                "mount": "true",
                "root-name": "/srv/tempo",
                "directories": {"repo": "/repo"}
            }
        }
    },
    "lfphp-cloud": {
        "account"  : "$ACCOUNT",
        "username" : "$USER",
        "token"    : "$TOKEN"
    }
}
